				{
					"name": "Get All Equipments (Paginated)",
					"request": {
						"method": "GET",
						"header": [],
						"url": {
							"raw": "{{baseUrl}}/api/equipments?pageNumber=1&pageSize=10&type=&status=&keyword=",
							"host": ["{{baseUrl}}"],
							"path": ["api", "equipments"],
							"query": [
								{
									"key": "pageNumber",
									"value": "1",
									"description": "Page number (default: 1)"
								},
								{
									"key": "pageSize",
									"value": "10",
									"description": "Items per page (default: 10, max: 100)"
								},
								{
									"key": "type",
									"value": "",
									"description": "Filter by equipment type (e.g., Laptop, Desktop)"
								},
								{
									"key": "status",
									"value": "",
									"description": "Filter by status (1: New, 2: InUse, 3: Broken, 4: Repairing, 5: Lost, 6: Liquidated)"
								},
								{
									"key": "keyword",
									"value": "",
									"description": "Search in Code, Name, Description"
								}
							]
						},
						"description": "Get paginated list of equipments with optional filters"
					},
					"response": []
				},
				{
